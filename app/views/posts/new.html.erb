<div class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-half">
				<h1 class="title">New Post</h1>
				<%= form_with model:@post do |f|%>
                    <div class="field">
                        <div class="controll">
                         <%= f.text_area :body, class: "textarea is-medium", label: "Post about it", input_html: { class: "textarea is-medium"}, wrapper: false, label_html: {class: "label"}, placeholder: "write nasty stuff that no one will ever discover...", autofocus: true %>
                        </div>
                    </div>
                    <%= f.submit class: "button is-info" %>
                <% end %>
			</div>
		</div>
	</div>
</div>