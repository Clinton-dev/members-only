
<section class="section">
  <div class="container">
    <div class="columns is-center">
      <div class="column is-half">
        <h1 class="title">All nasty post</h1>
        <% @posts.each do |post|%>
          <div class="box">
           <article class="media">
            <div class="media-content">
             <% if user_signed_in?%>
              <strong>username: </strong><%= post.user.username %><br />
             <% end %>
              <p><%= post.body%></p>
            </div>
           </article>
          </div>
    	<% end %>
        
        
        
        
      </div>
    </div>
  </div>
</section>